<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/arm_debug_view_bg"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audiobookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/black"
            tools:text="Title: Life of Pi"/>

        <TextView
            android:id="@+id/loadingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/appStateUpdateCountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="42 AppState updates"/>

    <TextView
        android:id="@+id/playlistSizeInfoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="CurrentPlayable file index: 5 out of 42"/>

    <TextView
        android:id="@+id/positionAndDurationTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text=":59 / 5:35"/>

    <TextView
        android:id="@+id/playbackSpeedTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Info:"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/downloadStateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@android:color/black"
            tools:text="Download State: Downloading"/>

        <TextView
            android:id="@+id/downloadPercentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            tools:text="43% downloaded"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actions Dispatched:"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/actionsDispatchedTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@android:color/black"
        tools:text="UpdateAction, Random Action"/>

    <TextView
        android:id="@+id/drmStatusTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        tools:text="No DRM"/>

</LinearLayout>